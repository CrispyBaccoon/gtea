#!/usr/bin/env sh

gtea__commit() {
  [[ "$1" = "i" ]] && { gtea__commit_interactive; return 0; }
  [[ -z "$1" ]] || [[ -z "$2" ]] || [[ -z "$3" ]] &&gtea__die "not enough arguments provided."
  _message="$1($2): $3"
  git commit -m "$_message"
}

gtea__commit_interactive() {
  _types=$(git log --oneline --pretty="%s" | grep -oE "^\w*" | sort -u)
  _type=$(echo -e "$_types" '\n' | fzf)
  [[ -z "$_type" ]] && read -p "type: " _type
  [[ -z "$_type" ]] &&gtea__die "no type specified."
  read -p "scope: " _scope
  [[ -z "$_scope" ]] &&gtea__die "no scope specified."
  read -p "msg: " _msg
  [[ -z "$_msg" ]] &&gtea__die "no msg specified."

  gtea__commit "$_type" "$_scope" "$_msg"
}
